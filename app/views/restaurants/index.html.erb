<div class="row">
  <%= link_to "Add Restaurant", "/restaurants/new", style: "float: right; margin: 0px;" %>
</div>

<h2>Restaurants</h2>


<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
    <div class="col-xs-12 col-sm-4" style="padding: 10px;">
      <div class="card">
        <div class="card-category"><%= restaurant.category.capitalize %></div>
        <div class="card-description">
          <h3><%= link_to restaurant.name, restaurant_path(restaurant.id) %></h3>
          <h2><%= restaurant.phone_number %></h2>
          <p><%= restaurant.address %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

