<h2><%= @restaurant.name %></h1>
<h3><%= @restaurant.address %></h4>
<h3><%= @restaurant.phone_number %></h4>
<h3><%= @restaurant.category.capitalize %></h4>


<h2>Reviews:</h2>
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %> : <%= review.rating %></p>
<% end %>

<%= link_to "Add Review", new_restaurant_review_path(@restaurant) %> <br>
<%= link_to "Edit the Restaurant", edit_restaurant_path(@restaurant) %> <br>
<%= link_to "Delete the Restaurant", restaurant_path(@restaurant), method: :delete %> <br>
<%= link_to "List Restaurants", restaurants_path %>
