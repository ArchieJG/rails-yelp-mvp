<%= @restaurant.name %>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">

    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.error_notification %>

    <%= f.input :content %>

    <%= f.input :rating, as: :select, collection: Review::RATINGS  %>

    <%= f.submit %>

    <% end %>
    <%= link_to "Cancel Creation", restaurants_path %>
  </div>
</div>
